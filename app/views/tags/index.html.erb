<h1>All tags</h1>
<ul>
    <% @tags.each do |tag|%>
        <li>
            <%= link_to tag.name, tag_path(tag), class: 'article_title', id: "article_#{tag.id}" %>
        </li>
        <%= link_to 'delete', tag_path(tag), method: :delete, data: {confirm: "Really delete this tag?"}%><br>
    <% end %>

</ul>
